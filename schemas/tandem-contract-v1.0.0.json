{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Contract specification for Tandem protocol implementations",
  "properties": {
    "contract_id": {
      "description": "Unique contract identifier",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "type": "string"
    },
    "obligations": {
      "description": "Mutual obligations and SLAs",
      "properties": {
        "availability": {
          "description": "Availability SLA percentage",
          "maximum": 100,
          "minimum": 0,
          "type": "number"
        },
        "error_rate": {
          "description": "Maximum acceptable error rate percentage",
          "maximum": 100,
          "minimum": 0,
          "type": "number"
        },
        "response_time_ms": {
          "description": "Maximum response time in milliseconds",
          "minimum": 0,
          "type": "integer"
        }
      },
      "type": "object"
    },
    "parties": {
      "items": {
        "properties": {
          "endpoint": {
            "description": "Service endpoint URL",
            "format": "uri",
            "type": "string"
          },
          "name": {
            "description": "Party identifier/name",
            "type": "string"
          },
          "role": {
            "description": "Role in tandem relationship",
            "enum": [
              "provider",
              "consumer",
              "validator"
            ],
            "type": "string"
          }
        },
        "required": [
          "name",
          "role"
        ],
        "type": "object"
      },
      "minItems": 2,
      "type": "array"
    },
    "status": {
      "default": "draft",
      "description": "Contract lifecycle status",
      "enum": [
        "draft",
        "active",
        "deprecated",
        "archived"
      ],
      "type": "string"
    },
    "version": {
      "description": "Semantic version of contract",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "type": "string"
    }
  },
  "required": [
    "contract_id",
    "version",
    "parties"
  ],
  "title": "Tandem Contract Schema",
  "type": "object",
  "version": "1.0.0"
}
